generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  name  String?
  created_time DateTime
  email String  @unique
  cards Card[]
  Reply Reply[]
}

model Card {
  id      Int     @id @default(autoincrement())
  content   String
  user    User?    @relation(fields: [userId], references: [id])
  userId  Int?
  replies Reply[]
  Likes Int
  state String
  time DateTime
}

model Reply {
  id      Int     @id @default(autoincrement())
  content String
  user    User?    @relation(fields: [userId], references: [id])
  userId  Int
  card    Card    @relation(fields: [cardId], references: [id])
  cardId  Int
}
